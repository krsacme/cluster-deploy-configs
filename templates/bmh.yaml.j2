---
apiVersion: v1
kind: Secret
metadata:
  name: {{ name }}
  namespace: openshift-machine-api
type: Opaque
data:
  username: {{ username }}
  password: {{ password }}
---
apiVersion: metal3.io/v1alpha1
kind: BareMetalHost
metadata:
  name: {{ name }}
  namespace: openshift-machine-api
spec:
  online: true
  bootMACAddress: {{ mac }}
  bmc:
    address: ipmi://{{ bmc_ip }}
    credentialsName: {{ name }}
